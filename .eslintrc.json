{
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier"
  ],
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
    // "jest":true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-undef": "error",
    "jsx-a11y/anchor-is-valid": ["off"]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
